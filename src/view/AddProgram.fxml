<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddProgramController">
   <children>
      <ImageView fitHeight="401.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/bl1.jpg" />
         </image>
      </ImageView>
      <JFXTextField fx:id="txtId" labelFloat="true" layoutX="25.0" layoutY="90.0" prefHeight="25.0" prefWidth="169.0" promptText="ID">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></JFXTextField>
      <JFXTextField fx:id="txtDuration" labelFloat="true" layoutX="25.0" layoutY="193.0" prefHeight="25.0" prefWidth="169.0" promptText="Duration">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></JFXTextField>
      <JFXTextField fx:id="txtName" labelFloat="true" layoutX="25.0" layoutY="142.0" prefHeight="25.0" prefWidth="169.0" promptText="Programme Name">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></JFXTextField>
      <JFXTextField fx:id="txtFee" labelFloat="true" layoutX="25.0" layoutY="246.0" prefHeight="25.0" prefWidth="169.0" promptText=" Fee [LKR]">
         <font>
            <Font name="System Bold" size="14.0" />
